> apl <- function(graph) {
+   sp <- shortest.paths(graph, mode="out")
+   if (is.directed(graph)) {
+     diag(sp) <- NA
+   } else {
+     sp[lower.tri(sp, diag=TRUE)] <- NA
+   }
+   sp[sp=="Inf"] <- NA
+   mean(sp, na.rm=TRUE)
+ }
