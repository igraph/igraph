
##################################
# GRAPH

GRAPH:
  CTYPE: igraph_t*
  JAVATYPE: jobject
  INCONV: 
    IN: if (Java_jobject_to_igraph(env, %I%, &%C%)) return 0;
    OUT: %C% = (igraph_t*)calloc(1, sizeof(igraph_t));
    INOUT: if (Java_jobject_to_igraph(env, %I%, &%C%)) return 0;
  OUTCONV:
    OUT: %I% = Java_igraph_to_new_jobject(env, %C%, cls);
    INOUT: /* No conversion needed for INOUT GRAPH */

##################################
# INTEGER

INTEGER:  
  CTYPE: igraph_integer_t
  JAVATYPE: jlong
  INCONV: 
    IN: %C% = (igraph_integer_t)%I%;
  OUTCONV:
    OUT: %I% = (jlong)%C%;

INTEGERPTR:
  CTYPE: igraph_integer_t
  JAVATYPE: jlong
  CALL: &%C%
  OUTCONV:
    OUT: %I% = (jlong)%C%;

INT:
  CTYPE: int
  JAVATYPE: jint
  INCONV:
    IN: %C% = (int)%I%;

##################################
# REAL

REAL:
  CTYPE: igraph_real_t
  JAVATYPE: jdouble
  INCONV:
    IN: %C% = (igraph_real_t)%I%;
  OUTCONV:
    OUT: %I% = (jdouble)%C%;

REALPTR:
  CTYPE: igraph_real_t
  JAVATYPE: jdouble
  CALL: &%C%
  INCONV:
    INOUT: %C% = (igraph_real_t)%I%;
  OUTCONV:
    OUT: %I% = (jdouble)%C%;

##################################
# BOOLEAN

BOOLEAN:
  CTYPE: igraph_bool_t
  JAVATYPE: jboolean
  INCONV:
    IN: %C% = (igraph_bool_t)%I%;
  OUTCONV:
    OUT: %I% = (%C% ? JNI_TRUE : JNI_FALSE);

BOOLEANPTR:
  CTYPE: igraph_bool_t
  JAVATYPE: jboolean
  CALL: &%C%
  OUTCONV:
    OUT: %I% = (%C% ? JNI_TRUE : JNI_FALSE);

##################################
# ERROR, used as the return type usually

ERROR:
  CTYPE: int

##################################
# ATTRIBUTES (not implemented yet)

ATTRIBUTES:
